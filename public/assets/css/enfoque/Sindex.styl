/*RESPONSIVE CONFIGURTIONS*/

/*SMALL DEVICES */
@media  (max-width: 991px) 
	.overlay-video
		z-index 1000
		.contenedor-video
			width 85% !important
			
			overflow-y scroll
		.control-video
			font-size 2em
	.image-gallery
		height initial !important
