body
    background black
.img-logo
    width 100px
    display inline-block
    vertical-align top 
    display inline-block
    float left
    padding 10px
    margin-right 3%
.navbar
    background-color black
    border-radius 0px
    border 0px
    border-bottom 1px solid #ccc
    a
        color white !important
    li.active
        a
            background-color transparent !important
            color black !important
.dropdown-toggle
    background-color transparent !important
.dropdown-menu
    background-color rgba(0, 0, 0, .85)
    a:hover
        background-color transparent !important

.collapse.navbar-collapse
    display inline-block !important
    float left
    margin-top 1.3%
    // margin-left 7%
.carousel-inner
    text-align center
    height 500px
    img
        width 100%
    
.container-slider-principal--
    padding 0
    margin-bottom 15px
.container-gallery:hover img
    width: 165%
.container-gallery
    text-align center
    margin-bottom: 15px
    background-color #000
    position relative
    height 360px
    color white
    font-size 2em
    overflow hidden
    img
        width 160%
        opacity .6
        cursor pointer
        max-width initial
        -webkit-transition:all .5s 
        -moz-transition:all .5s 
        -ms-transition:all .5s 
        -o-transition:all .5s 
        transition:all .5s 
    strong
        border-bottom 3px solid white
        text-align left 
    p
        font-size 0.6em
        color #f9f9f9
        text-align center 
    .container-info-album
        position absolute
        bottom 0
        left 0
        right 0
        padding 0 5px 0 15px
        span
            font-size 0.7em
        span.icons
            font-size 1.3em
            vertical-align middle
            margin-left 5px
        .info-videos
            float right 
            margin-right 10px
        .info-images
            float left
            margin-left 10px
.centrado-porcentual 
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    -webkit-transform: translate(-50%, -50%);

footer
    padding 1%
    background-color #AC1E23
    color white